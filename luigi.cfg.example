[core]
# Number of parallel workers (default: 1)
default-scheduler-workers=4

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# Leave empty to use default logging configuration
# logging_conf_file=

# Retry settings
retry-count=3
retry-delay=5

[scheduler]
# Keep successful tasks in memory
# Note: Disabled due to SQLAlchemy 2.x compatibility issues
# To enable: install sqlalchemy<2.0 and set to True
record_task_history=False

# Remove old jobs after X seconds
# 7200 = 2 horas | 14400 = 4 horas | 28800 = 8 horas | 86400 = 24 horas
remove-delay=28800

[worker]
# Keep alive interval for workers
keep-alive=True
keep-alive-interval=30

# Maximum number of jobs to keep in memory
max_keep_alive_idle_duration=3600

# [task_history]
# SQLite database to store task history
# Disabled due to SQLAlchemy 2.x compatibility issues
# To enable: install sqlalchemy<2.0 and uncomment this section
# db_connection=sqlite:///logs/luigi_history.db

[resources]
# Resource limits (optional)
# Example: limit concurrent database connections
# database=5

[email]
# Email notifications (optional)
# force-send=False
# method=smtp
smtp_host=smtp.gmail.com
smtp_port=587
smtp_login=smtp-email-here
smtp_password=smtp-password-here
receiver=smtp-receiver-here

[retcode]
# Exit codes
already_running=10
missing_data=20
not_run=25
task_failed=30
scheduling_error=35
unhandled_exception=40
